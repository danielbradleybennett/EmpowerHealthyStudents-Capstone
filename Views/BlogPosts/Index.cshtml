@model IEnumerable<EmpowerHealthyStudents.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}

<h1>Blog Posts</h1>

<p>
    <a asp-action="Comments/Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Blog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>



            <th></th>
        </tr>
    </thead>
    <tbody>
        <body>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Blog)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    @foreach (var comment in item.Comments)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => comment.Text)
                        </td>
                    }

            <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                </tr>
            }

        </body>
    </tbody>
</table>
