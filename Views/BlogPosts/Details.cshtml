@model EmpowerHealthyStudents.Models.BlogPost;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> userMan;


@{
    ViewData["Title"] = "Details";
}



<div>
    <h1>April's Blog</h1>
    
    <h4>
        @Html.DisplayFor(model => model.Date)
    </h4> 
       
    
    <div>
        @if (@Model.UserId == userMan.GetUserId(User) || ViewBag.IsAdmin == true)
        {
            
          <a asp-controller="BlogPosts" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>  <a asp-controller="BlogPosts" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
          
        }
       
    </div>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <h4>
                @Html.DisplayFor(model => model.Title)
            </h4>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog)
        </dd>
        <dd class="col-sm-10">
            @foreach (var comment in Model.Comments)
            {
            <td>
                @Html.DisplayFor(modelitem => comment.User.FirstName): @Html.DisplayFor(modelItem => comment.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => comment.Date)
            </td>
            <td>

                @if (comment.UserId == userMan.GetUserId(User) || ViewBag.IsAdmin == true)
                {
                    <a asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.Id">Edit</a> <a asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id">Delete</a>
                }
            </td>
        }
        </dl>
            @if (User.Identity.IsAuthenticated || ViewBag.IsAdmin == true)
            {
                <div>
                    <a asp-route-id="@Model.Id" asp-controller="Comments" asp-action="Create">Add Comment</a>
                </div>
               
            }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
