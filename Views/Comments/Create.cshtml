@model EmpowerHealthyStudents.Models.Comment

@{
    ViewData["Title"] = "Create";
}


<h4>Leave A Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <input type="hidden" name="id" asp-for="@Model.BlogPostId" />
                <input type="submit" value="Create" class="btn btn-light-grey" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="hidden" name="id" asp-for="@Model.BlogPostId" />
    <a class="btn btn-light-grey" asp-controller="BlogPosts" asp-route-id="@Model.BlogPostId" asp-action="Details">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
