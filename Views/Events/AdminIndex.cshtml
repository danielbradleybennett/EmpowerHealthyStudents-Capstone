@model IEnumerable<EmpowerHealthyStudents.Models.Event>

@{
    ViewData["Title"] = "AdminIndex";
}

<h1>List of Events</h1>

<p>
    <a class="btn-primary btn" asp-action="Create">Add Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a class="nav-link btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="nav-link btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
